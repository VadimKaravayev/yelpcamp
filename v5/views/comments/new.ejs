<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <h1 class="text-center">Add new comment to <%= campground.name%></h1>

    <div class="d-flex justify-content-center">
        <form action="/campgrounds/<%= campground._id%>/comments" method="POST" class="w-25">
            <div class="form-group">
                <textarea name="comment[text]" class="form-control" placeholder="Write comment here"
                    rows="5"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary w-100">
            </div>
            
        </form>
        
    </div>
</div>


