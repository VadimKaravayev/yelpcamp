<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <h1 class="text-center">Edit <%= campground.name%></h1>

    <div class="d-flex justify-content-center">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="w-25">
            <div class="form-group">
                <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" min="0.01" name="campground[price]" value="<%= campground.price %>" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">    
            </div>
            <div class="form-group">
                <!--<input type="text" name="description" placeholder="description" class="form-control">-->
                <textarea name="campground[description]" class="form-control"
                    rows="5"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary w-100">
            </div>
        </form>
    </div>
    <a href="/campgrounds"><span>&#8249;</span>Back to campgrounds</a>
</div>

<% include ../partials/footer%>