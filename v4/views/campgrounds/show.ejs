<% include ../partials/header%>
<% include ../partials/nav %>

<h1>This is the show template</h1>

<h4><%= campground.name%></h4>
<img src="<%= campground.image %>" alt="image">
<p><%= campground.description %></p>
<p><a class="btn btn-success" href="/campgrounds/<%= campground._id%>/comments/new">New comment</a></p>
<% campground.comments.forEach(comment=> { %>
    <p><strong><%= comment.author%></strong> - <%= comment.text%></p>
<% }); %>
<a href="/campgrounds"><span>&#8249;</span>Back to campgrounds</a>

<% include ../partials/footer%>