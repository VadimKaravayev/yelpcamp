<% include partials/header %>
<% include partials/nav %>




<div class="container">

    
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our camps from all over ther world</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-large">Create a camp</a><p>    
        </div>
        
    </header>

    <div class="row">
        <% campgrounds.forEach(function(camp) { %>
            <div class="col-lg-4 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%=camp.image%>" alt="camp image" class="img-fluid">
                    <div class="caption">
                        <h4 class="text-center"><%= camp.name%></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<% include partials/footer%>